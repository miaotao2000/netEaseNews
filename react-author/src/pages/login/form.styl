#form
  width 400px
  height 300px
  background-color #fff
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  padding 20px 35px
  .title
    font-weight bold
    text-align center
    font-size 20px
    margin-bottom 30px
  .btn
    display block
    width 100%
    margin 0 auto