#form
  width 400px
  height 400px
  background-color rgba(255,255,255,.8)
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  padding 20px 35px
  border-radius 50%
  padding 70px 50px
  .title
    font-weight bold
    text-align center
    font-size 20px
    margin-bottom 30px
  .btn
    display block
    width 100%
    margin 0 auto