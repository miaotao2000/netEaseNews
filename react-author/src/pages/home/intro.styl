#intro
  width 300px
  height 420px
  background: #845aec none repeat scroll 0 0
  padding 30px 15px
  .avatar
    border 10px solid rgba(255, 255, 255, 0.3)
    border-radius: 50%
    height 220px
    width 220px
    margin 0 auto
    overflow hidden
    img
      width 100%
      height 100%
  .nickName
    color #fff
    font-size 24px
    font-weight 400
    text-align center
    margin-top 34px
    text-transform capitalize
  .autograph
    color #fff
    display block
    font-size 16px
    margin-top 25px
    text-transform capitalize
    text-align center